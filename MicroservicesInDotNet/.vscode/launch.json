    "version": "0.2.0",
    "configurations": [
        {
            "name": "HelloMicroservices",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-hello-microservices",
            "program": "${workspaceFolder}/HelloMicroservices/bin/Debug/net6.0/HelloMicroservices.dll",
            "args": [],
            "cwd": "${workspaceFolder}/HelloMicroservices",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        }
    ]
}